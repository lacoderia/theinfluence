<div id="dashboard-container" class="col-lg-12">

  <% if not @product_array.empty?  %>
    <div id="product-resume">
        <img src="<%= @product.image %>" alt="<%= @product.name %>" class="col-md-2">
        <h3 class="col-md-10 product-name"><%= @product.name %></h3>
        <p  class="col-md-10"><%= @product.short_description %></p>
        <div class="clearfix"></div>
    </div>

    <div id="product-detail">
        <div id="product-gallery" class="col-md-7" data-items="<%= @assets_json %>">
          <div id="inner-gallery">
            <ul id="gallery-items"></ul>
          </div>
          <ul id="thumb-gallery"></ul>
          <div class="clearfix"></div>
        </div>
        <div class="col-md-5">
            <p class="product-description"><%= @description.html_safe %></p>
            <div class="panel panel-default">
              <div class="panel-heading">Beneficios</div>
              <div class="panel-body">
                <ul class="product-benefits">
                  <% @benefits_array.each do |benefit| %>
                      <li><%= benefit %></li>
                  <% end %>
                </ul>
              </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>


    <% if not @combos_array.empty? %>
        <div id="product-combos">
        <h2>Elige tu paquete</h2>

        <table>
          <thead>
          <tr>
            <th class="addon"></th>
                <% @combos_array.each do |combo| %>
                    <th>
                      <span class="combo-title"><%= combo.name %>></span>
                      <span class="combo-price"><%= number_to_currency(combo.price, precision: 0, locale: :en) %></span>
                      <span class="combo-description"><%= combo.description %></span>
                    </th>
                <% end %>
            </tr>
          </thead>
          <tbody>
          <%=  @product_addons_set.keys.each do |key| %>
            <tr>
              <td class="addon-title"><%= key %></td>
              <% @product_addons_set[key].each do |addon| %>
                <td><%= addon %></td>
              <% end %>
            </tr>
          <% end %>
          <tr>
            <td class="addon-title">Tópicos</td>
            <td>3</td>
            <td>8</td>
            <td>20</td>
          </tr>
          <tr>
            <td class="addon-title">Perfiles que pueden publicar</td>
            <td>1</td>
            <td>1</td>
            <td>2</td>
          </tr>
          <tr>
            <td class="addon-title">Central de Información</td>
            <td><span class="glyphicon glyphicon-ok addon-included"></span></td>
            <td><span class="glyphicon glyphicon-ok addon-included"></span></td>
            <td><span class="glyphicon glyphicon-ok addon-included"></span></td>
          </tr>
          <tr>
