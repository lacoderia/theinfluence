<h1>Listing addons</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addons.each do |addon| %>
      <tr>
        <td><%= addon.addon_order %></td>
        <td><%= addon.name %></td>
        <td><%= addon.description %></td>
        <td><%= addon.category_id %></td>
        <td><%= link_to 'Show', addon %></td>
        <td><%= link_to 'Edit', edit_addon_path(addon) %></td>
        <td><%= link_to 'Destroy', addon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Addon', new_addon_path %>
