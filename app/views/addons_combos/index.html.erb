<h1>Listing addons_combos</h1>

<table>
  <thead>
    <tr>
      <th>Addon int</th>
      <th>Combo</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addons_combos.each do |addons_combo| %>
      <tr>
        <td><%= addons_combo.addon_id %></td>
        <td><%= addons_combo.combo_id %></td>
        <td><%= addons_combo.quantity %></td>
        <td><%= addons_combo.price %></td>
        <td><%= link_to 'Show', addons_combo %></td>
        <td><%= link_to 'Edit', edit_addons_combo_path(addons_combo) %></td>
        <td><%= link_to 'Destroy', addons_combo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

