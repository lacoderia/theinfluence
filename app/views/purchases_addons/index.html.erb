<h1>Listing purchases_addons</h1>

<table>
  <thead>
    <tr>
      <th>Addon</th>
      <th>User</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases_addons.each do |purchases_addon| %>
      <tr>
        <td><%= purchases_addon.addon_id %></td>
        <td><%= purchases_addon.user_id %></td>
        <td><%= purchases_addon.quantity %></td>
        <td><%= purchases_addon.total_price %></td>
        <td><%= link_to 'Show', purchases_addon %></td>
        <td><%= link_to 'Edit', edit_purchases_addon_path(purchases_addon) %></td>
        <td><%= link_to 'Destroy', purchases_addon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

