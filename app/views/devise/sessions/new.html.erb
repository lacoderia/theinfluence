<div class="signin backgroundform">
  <div class="container">
    <div class="authform">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h3>Ingresa</h3>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%- if devise_mapping.recoverable? %>
            <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: 'right' %>
          <% end -%>
          <%= f.label :password, 'Contraseña' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
          <%= f.submit 'Ingresa', :class => 'btn btn-blue btn-small btntop right' %>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
            <%= f.check_box :remember_me, :style => "margin-left: auto;" %> <%= f.label :remember_me, 'Recuérdame' %>
            </div>
          <% end -%>
      <% end %>
    </div>
  </div>
</div>
