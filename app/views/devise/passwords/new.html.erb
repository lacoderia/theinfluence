<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>¿Olvidaste tu contraseña?</h3>
    <p>Te enviaremos instrucciones para reiniciarlo.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
     <%= f.submit 'Reiniciar contraseña', :class => 'btn btn-blue btn-small right' %>
  <% end %>
</div>
