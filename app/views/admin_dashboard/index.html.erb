<h1>Lista de usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Detalle', admin_user_detail_path(:user_id => user.id) %></td>
        <% if user.active? %>
          <td><%= link_to 'Desactivar', deactivate_user_path(:user_id => user.id, :redirected => true), method: :get, data: { confirm: '¿Estás seguro?' } %></td>
        <% else %>
          <td><%= link_to 'Activar', activate_user_path(:user_id => user.id, :redirected => true), method: :get, data: { confirm: '¿Estás seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
